# ASMIS Backend Environment Configuration
# Copy this file to .env and update with your values

# Application Environment
ASMIS_ENVIRONMENT=development

# Database Configuration
# For development (SQLite)
ASMIS_DB_DATABASE_URL=sqlite:///./asmis.db
ASMIS_DB_TEST_DATABASE_URL=sqlite:///./test_asmis.db

# For production (PostgreSQL) - NEVER commit real credentials
# ASMIS_DB_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/asmis_prod

# Database Pool Settings
ASMIS_DB_DATABASE_POOL_SIZE=20
ASMIS_DB_DATABASE_POOL_MAX_OVERFLOW=10
ASMIS_DB_DATABASE_POOL_TIMEOUT=30
ASMIS_DB_DATABASE_ECHO=false

# AI Service Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security Note:
# - Never commit .env files to version control
# - Use environment-specific values for each deployment
# - Consider using secrets management for production